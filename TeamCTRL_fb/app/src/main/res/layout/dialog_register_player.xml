<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingBottom="25dp"
    android:paddingEnd="25dp"
    android:paddingStart="25dp"
    android:paddingTop="25dp"
    >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/profilePic"
        android:src="@drawable/ic_person_unknown"
        android:layout_marginBottom="10sp"
        />

    <Button
        android:text="Take picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cameraTrigger"
        android:elevation="2dp"
        tools:text="Snap profile picture"
        android:background="@color/colorPrimary"
        android:textColor="@color/bgColorPrimary"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="10sp"
        />

    <TextView
        android:text="@string/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="15sp"
        android:textColor="@color/colorSecondary" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_player_name"
        android:paddingBottom="25dp" />

    <TextView
        android:text="@string/preferred_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="15sp"
        android:textColor="@color/colorSecondary" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_player_position"
        android:textSize="18sp" />

</LinearLayout>